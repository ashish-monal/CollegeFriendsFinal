<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SevenSemesterActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome in 7th Semester Computer Science Department"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/Biology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button"
            android:text="Biology"
            android:textSize="18sp" />


        <Button
            android:id="@+id/DataScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Biology"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button"
            android:text="Data Science"
            android:textSize="18sp" />
        <Button
            android:id="@+id/Softskill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DataScience"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button"
            android:text="Soft Skill"
            android:textSize="18sp" />

        <Button
            android:id="@+id/CyberSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Softskill"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button"
            android:text="Cyber Security"
            android:textSize="18sp" />



    </RelativeLayout>

</ScrollView>