<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiftSemesterActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Semester5DBMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:text="DataBase Management System"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Semester5FLAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Semester5DBMS"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Formal Language And Automata "
            android:textStyle="bold" />

        <Button
            android:id="@+id/Semester5AI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Semester5FLAT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Artificial Intelligence"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/Semester5SE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Semester5AI"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Software Engineering"
            android:textAlignment="gravity"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Semester5PSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Semester5SE"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textAllCaps="true"
            android:text="Professional Skill Development"
            android:textStyle="bold" />


    </RelativeLayout>

</ScrollView>