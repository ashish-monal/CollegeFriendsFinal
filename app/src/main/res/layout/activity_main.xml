<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/semesterfirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="Semster - 01"
            android:textSize="18sp" />

        <Button
            android:id="@+id/semestersecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/semesterfirst"
            android:background="@drawable/custom_button"
            android:text="Semster - 02"
            android:textSize="18sp" />


        <Button
            android:id="@+id/semesterthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="Semster - 03"
            android:layout_below="@+id/semestersecond"
            android:textSize="18sp" />


        <Button
            android:id="@+id/semesterfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/semesterthird"
            android:background="@drawable/custom_button"
            android:text="Semster - 04"
            android:textSize="18sp" />

        <Button
            android:id="@+id/semesterfive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/semesterfour"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="Semster - 05"
            android:textSize="18sp" />

        <Button
            android:id="@+id/semestersix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/semesterfive"
            android:background="@drawable/custom_button"
            android:text="Semster - 06"
            android:textSize="18sp" />

        <Button
            android:id="@+id/semesterseven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/semestersix"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="Semster - 07"
            android:textSize="18sp" />

        <Button
            android:id="@+id/semestereight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/semesterseven"
            android:background="@drawable/custom_button"
            android:text="Semster - 08"
            android:layout_marginBottom="75dp"
            android:textSize="18sp" />


    </RelativeLayout>

</ScrollView>